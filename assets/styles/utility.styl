// a11y
.accessible-hide
  -webkit-clip-path: inset(1px)
  clip-path: inset(1px)
  clip: rect(1px 1px 1px 1px)
  clip: rect(1px,1px,1px,1px)
  display: block
  height: 1px
  overflow: hidden
  position: absolute
  white-space: nowrap
  width: 1px

// form
.form-field-reset
  -webkit-appearance: none
  border: 0
  border-radius: 0
  display: inline-block
  height: auto
  letter-spacing: inherit
  line-height: inherit

// form
form
  margin-left: auto
  margin-right: auto
  max-width: 30rem
  padding-bottom: 10rem

  @media screen and (max-width: 768px)
    padding-left: 1.5rem
    padding-right: 1.5rem

button
  display: inline-block
  font-size: 1rem
  border-radius: 1.5em

input
  margin-bottom: 1rem

.form-text
  margin-bottom: 1.5rem

.checkbox-wrapper:first-of-type
  // margin-top: 2rem

.input-text,
[type="text"]
  padding: 1rem 1rem
  width: 100%
  max-width: 30rem
  margin-bottom: 1.5rem

.checkbox
  &+label
    cursor: pointer
    padding: 0
    position: relative

  &+label:before
    background: #fff
    content: ""
    display: inline-block
    height: 20px
    margin-bottom: 17px
    margin-right: 20px
    vertical-align: text-top
    width: 20px

  &:checked +label:after
    box-shadow: 2px 0 0 black,4px 0 0 black,4px -2px 0 black,4px -4px 0 black,4px -6px 0 black,4px -8px 0 black
    content: ""
    height: 2px
    left: 5px
    position: absolute
    top: 9px
    -webkit-transform: rotate(45deg)
    transform: rotate(45deg)
    width: 2px
