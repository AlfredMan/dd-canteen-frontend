html, body
  font-family MabryTrial, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
  font-size 14px
  font-weight 300
  color #000

body
  background-color lighten(#eceef1, 30%)
  margin 0
  padding-top 55px
  overflow-y scroll

a
  color #34495e
  text-decoration none

h1, .h1
  font-weight 500
  font-size 10rem // 10x
  line-height 0.8
  text-transform uppercase
  letter-spacing -0.05em
  margin: 2rem 0
h2, .h2
  font-weight 500
  font-size 6rem // 6x
  line-height 0.8
  text-transform uppercase
  letter-spacing -0.05em
  margin: 2rem 0
h3, .h3
  font-weight 500
  font-size 2rem // 2x
  line-height 1 // 1
  text-transform uppercase
  letter-spacing -0.0em
  margin: 2rem 0
h4, .h4
  font-weight 300
  font-size 1rem // 1x
  line-height 1.5 // 1.5
  margin: 1rem 0
h5, .h5
  font-weight 300
  font-size .667rem // .667x
  line-height 1.5 // 1.5
  margin: 1rem 0
h6, .h6
  font-weight 300
  font-size .667rem // .667x
  line-height 1.5 // 1.5
  margin: 1rem 0
p
  font-weight 300
  font-size 1rem // 1x
  line-height 1.5 // 1.5
  margin: 1rem 0
